<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/achievement_statistics_item_total_achievement_points_title"
        style="@style/bodyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total achievementEntryEntity points: 2000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/achievement_statistics_item_total_achievements_completed_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bodyText"
        android:text="Total achievementEntryEntities completedCount"
        app:layout_constraintTop_toBottomOf="@+id/achievement_statistics_item_total_achievement_points_title"
        app:layout_constraintStart_toStartOf="@+id/achievement_statistics_item_total_achievement_points_title"
        android:layout_marginTop="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>