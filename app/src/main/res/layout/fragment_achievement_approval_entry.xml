<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.achievements.AchievementApprovalEntryFragment">

    <include
        android:id="@+id/fragment_achievement_approval_entry_toolbar"
        layout="@layout/toolbar_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="50dp"
        android:clipToPadding="false"
        app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_toolbar"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.example.fitness_app.views.IconView
                android:id="@+id/fragment_achievement_approval_entry_title_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:text="@string/icon_header"
                android:textColor="@color/icon_color"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_title_title"
                style="@style/bodyText.muted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Title"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_achievement_approval_entry_title_icon"
                app:layout_constraintTop_toTopOf="@+id/fragment_achievement_approval_entry_title_icon" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_title_value"
                style="@style/bodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text=""
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_title_title"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_title_title" />

            <View
                android:id="@+id/fragment_achievement_approval_entry_title_divider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/mutedText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_title_value" />

            <com.example.fitness_app.views.IconView
                android:id="@+id/fragment_achievement_approval_entry_description_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/icon_description"
                android:textColor="@color/icon_color"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_title_icon"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_title_divider" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_description_title"
                style="@style/bodyText.muted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Description"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_achievement_approval_entry_description_icon"
                app:layout_constraintTop_toTopOf="@+id/fragment_achievement_approval_entry_description_icon" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_description_value"
                style="@style/bodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:gravity="top|start"
                android:maxLines="5"
                android:minLines="3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_description_title"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_description_title" />

            <View
                android:id="@+id/fragment_achievement_approval_entry_description_divider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/mutedText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_description_value" />

            <com.example.fitness_app.views.IconView
                android:id="@+id/fragment_achievement_approval_entry_achievement_points_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/icon_coins"
                android:textColor="@color/icon_color"
                android:textSize="20dp"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_title_icon"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_description_divider" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_achievement_points_title"
                style="@style/bodyText.muted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Achievement Points"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_achievement_approval_entry_achievement_points_icon"
                app:layout_constraintTop_toTopOf="@+id/fragment_achievement_approval_entry_achievement_points_icon" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_achievement_points_value"
                style="@style/bodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:inputType="number"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_achievement_points_title"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_achievement_points_title" />

            <View
                android:id="@+id/fragment_achievement_approval_entry_achievement_points_divider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/mutedText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_achievement_points_value" />

            <com.example.fitness_app.views.IconView
                android:id="@+id/fragment_achievement_approval_entry_user_icon"
                style="@style/icon_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/icon_user"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_title_icon"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_achievement_points_divider" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_user_title"
                style="@style/bodyText.muted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Username"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_achievement_approval_entry_user_icon"
                app:layout_constraintTop_toTopOf="@+id/fragment_achievement_approval_entry_user_icon" />


            <TextView
                android:id="@+id/fragment_achievement_approval_entry_user_value"
                style="@style/bodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_user_title"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_user_title"
                tools:text="Jake30493" />

            <View
                android:id="@+id/fragment_achievement_approval_entry_user_divider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/mutedText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_user_value" />

            <com.example.fitness_app.views.IconView
                android:id="@+id/fragment_achievement_approval_entry_requested_date_icon"
                style="@style/icon_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/icon_calendar"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_title_icon"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_user_divider" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_requested_date_title"
                style="@style/bodyText.muted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Date Requested"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_achievement_approval_entry_requested_date_icon"
                app:layout_constraintTop_toTopOf="@+id/fragment_achievement_approval_entry_requested_date_icon" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_requested_date_value"
                style="@style/bodyText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:ellipsize="end"
                android:maxLines="1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_requested_date_title"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_requested_date_title"
                tools:text="2019-12-31" />

            <View
                android:id="@+id/fragment_achievement_approval_entry_requested_date_divider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/mutedText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_requested_date_value" />

            <com.example.fitness_app.views.IconView
                android:id="@+id/fragment_achievement_approval_entry_user_description_icon"
                style="@style/icon_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/icon_clip_board"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_title_icon"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_requested_date_divider" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_user_description_title"
                style="@style/bodyText.muted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Users Note"
                app:layout_constraintStart_toEndOf="@+id/fragment_achievement_approval_entry_user_description_icon"
                app:layout_constraintTop_toTopOf="@+id/fragment_achievement_approval_entry_user_description_icon" />

            <TextView
                android:id="@+id/fragment_achievement_approval_entry_user_description_value"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:minLines="3"
                style="@style/bodyText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/fragment_achievement_approval_entry_user_description_title"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_user_description_icon" />

            <View
                android:id="@+id/fragment_achievement_approval_entry_user_description_divider"
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:background="@color/mutedText"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_user_description_value" />

            <Button
                android:id="@+id/fragment_achievement_approval_entry_decline_button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/cancel_button_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Decline"
                android:textAllCaps="false"
                android:textColor="@color/cancel"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/fragment_achievement_approval_entry_approve_button"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_achievement_approval_entry_user_description_divider"
                app:layout_constraintVertical_bias="0" />


            <Button
                android:id="@+id/fragment_achievement_approval_entry_approve_button"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/cancel_button_background"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:text="Approve"
                android:textAllCaps="false"
                android:textColor="@color/accent"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_achievement_approval_entry_decline_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fragment_achievement_approval_entry_decline_button"
                app:layout_constraintTop_toTopOf="@+id/fragment_achievement_approval_entry_decline_button" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
    <ProgressBar
        android:id="@+id/fragment_achievement_approval_entry_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>