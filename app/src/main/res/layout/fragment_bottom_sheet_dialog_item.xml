<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <View
        android:id="@+id/fragment_bottom_sheet_dialog_item_divider_top"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/pureBlack"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fragment_bottom_sheet_dialog_item_title"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/fragment_bottom_sheet_dialog_item_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:textColor="@color/text"
        android:textSize="16dp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/fragment_bottom_sheet_dialog_item_divider_bottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_bottom_sheet_dialog_item_divider_top"
        tools:text="item" />

    <View
        android:id="@+id/fragment_bottom_sheet_dialog_item_divider_bottom"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/pureBlack"
        app:layout_constraintTop_toBottomOf="@id/fragment_bottom_sheet_dialog_item_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
