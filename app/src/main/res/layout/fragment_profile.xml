<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.profile.ProfileFragment">

    <Button
        android:id="@+id/signOutBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="161dp"
        android:layout_marginTop="536dp"
        android:layout_marginEnd="162dp"
        android:layout_marginBottom="147dp"
        android:background="@color/accent"
        android:text="Sign out"
        android:textColor="@color/bb_darkBackgroundColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/websitelinkBtn"
        android:layout_width="116dp"
        android:layout_height="54dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="232dp"
        android:layout_marginBottom="94dp"
        android:background="@color/bb_inActiveBottomBarItemColor"
        android:text="Open website"
        android:textColor="@color/bb_darkBackgroundColor"
        app:layout_constraintBottom_toTopOf="@+id/signOutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/facebooklinkBtn"
        android:layout_width="116dp"
        android:layout_height="54dp"
        android:layout_marginTop="388dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="94dp"
        android:background="@color/facebook"
        android:text="Facebook page"
        android:textColor="@color/bb_darkBackgroundColor"
        app:layout_constraintBottom_toTopOf="@+id/signOutBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="188dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="188dp"
        android:text="Your email:"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_profile_level_textview" />

    <TextView
        android:id="@+id/fragment_profile_email_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="email"
        android:textAlignment="center"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        app:layout_constraintEnd_toEndOf="@+id/textview"
        app:layout_constraintStart_toStartOf="@+id/textview"
        app:layout_constraintTop_toBottomOf="@+id/textview" />

    <TextView
        android:id="@+id/fragment_profile_level_textview"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="196dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="196dp"
        android:gravity="center_horizontal"
        android:text="60"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ProgressBar
        android:id="@+id/fragment_profile_progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="135dp"
        android:layout_height="135dp"
        android:background="@drawable/circle_shape"
        android:indeterminateDuration="2000000"
        android:progressDrawable="@drawable/circular_progress_bar"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_level_textview"
        app:layout_constraintEnd_toEndOf="@+id/fragment_profile_level_textview"
        app:layout_constraintStart_toStartOf="@+id/fragment_profile_level_textview"
        app:layout_constraintTop_toTopOf="@+id/fragment_profile_level_textview"
        app:layout_constraintVertical_bias="0.484" />

    <TextView
        android:id="@+id/fragment_profile_exp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Max Level"
        android:textAlignment="center"
        android:textColor="@color/accent"
        android:textSize="11dp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_profile_level_textview"
        app:layout_constraintStart_toStartOf="@+id/fragment_profile_level_textview"
        app:layout_constraintTop_toBottomOf="@+id/fragment_profile_level_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>