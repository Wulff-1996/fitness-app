<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <com.example.fitness_app.views.IconView
        android:id="@+id/quest_approval_item_quest_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_quest"
        android:textColor="@color/icon_color"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/quest_approval_item_quest_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/bodyText"
        android:textSize="18dp"
        tools:text="Quest headline"
        app:layout_constraintTop_toTopOf="@+id/quest_approval_item_quest_icon"
        app:layout_constraintStart_toEndOf="@+id/quest_approval_item_quest_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/quest_approval_item_quest_icon"
        android:layout_marginEnd="16dp"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <com.example.fitness_app.views.IconView
        android:id="@+id/quest_approval_item_user_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/icon_user"
        style="@style/icon_style"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@+id/quest_approval_item_quest_title"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/quest_approval_item_user_title"
        style="@style/bodyText.muted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fragment_quest_approval_requests_user"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="@+id/quest_approval_item_user_icon"
        app:layout_constraintStart_toEndOf="@+id/quest_approval_item_user_icon"
        />

    <TextView
        android:id="@+id/quest_approval_item_user_value"
        style="@style/bodyText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/quest_approval_item_user_title"
        app:layout_constraintTop_toBottomOf="@+id/quest_approval_item_user_title"
        android:maxLength="40"
        android:minWidth="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp"
        tools:text="Hans Hansen"/>

    <com.example.fitness_app.views.IconView
        android:id="@+id/quest_approval_item_date_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/icon_style"
        android:text="@string/icon_calendar"
        app:layout_constraintTop_toTopOf="@+id/quest_approval_item_user_icon"
        app:layout_constraintStart_toEndOf="@+id/quest_approval_item_user_value"
        android:layout_marginStart="16dp"/>

    <TextView
        android:id="@+id/quest_approval_item_date_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/bodyText.muted"
        android:text="@string/fragment_quest_approval_requests_date_requested"
        app:layout_constraintStart_toEndOf="@+id/quest_approval_item_date_icon"
        app:layout_constraintTop_toTopOf="@+id/quest_approval_item_date_icon"
        android:layout_marginStart="8dp"/>

    <TextView
        android:id="@+id/quest_approval_item_date_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/bodyText"
        app:layout_constraintStart_toStartOf="@+id/quest_approval_item_date_title"
        app:layout_constraintTop_toBottomOf="@+id/quest_approval_item_date_title"
        tools:text="2019-23-11"
        app:layout_constraintEnd_toEndOf="parent"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginEnd="16dp"/>

    <com.example.fitness_app.views.IconView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/icon_right_arrow"
        android:textColor="@color/icon_color_muted"
        android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>