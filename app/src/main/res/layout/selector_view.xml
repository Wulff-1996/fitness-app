<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/selector_view_left_arrow"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_left_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/selector_view_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/selector_view_title" />

    <TextView
        android:id="@+id/selector_view_title"
        android:layout_width="0dp"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:textColor="@color/text"
        android:textSize="16dp"
        android:padding="8dp"
        android:ellipsize="end"
        android:textStyle="normal"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@+id/selector_view_right_arrow"
        app:layout_constraintStart_toEndOf="@+id/selector_view_left_arrow"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="First option" />

    <ImageButton
        android:id="@+id/selector_view_right_arrow"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/selector_view_title"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/selector_view_title" />


</androidx.constraintlayout.widget.ConstraintLayout>