<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/todo_item_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/text"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todo_item_duration_type"
        app:layout_constraintVertical_bias="0"
        tools:text="Each day drink a total of 5 glasses of water and the waster needs to be clean and healthy." />

    <com.google.android.material.chip.Chip
        android:id="@+id/todo_item_duration_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:checkable="false"
        app:chipCornerRadius="5dp"
        app:chipBackgroundColor="@color/accent"
        tools:text="Day" />

    <ProgressBar
        android:id="@+id/todo_item_progressBar"
        style="@style/mProgressBarHorizontal"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/todo_item_left_arrow"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/todo_item_subject"
        tools:progress="45" />

    <TextView
        android:id="@+id/todo_item_counter"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:gravity="center"
        android:textColor="@color/text"
        app:layout_constraintBottom_toBottomOf="@+id/todo_item_progressBar"
        app:layout_constraintEnd_toStartOf="@+id/todo_item_right_arrow"
        app:layout_constraintTop_toTopOf="@+id/todo_item_progressBar"
        tools:text="19/99" />

    <ImageButton
        android:id="@+id/todo_item_right_arrow"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_right_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/todo_item_progressBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/todo_item_progressBar" />

    <ImageButton
        android:id="@+id/todo_item_left_arrow"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@color/transparent"
        android:src="@drawable/ic_left_arrow"
        app:layout_constraintBottom_toBottomOf="@+id/todo_item_progressBar"
        app:layout_constraintEnd_toStartOf="@+id/todo_item_counter"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/todo_item_progressBar" />

</androidx.constraintlayout.widget.ConstraintLayout>