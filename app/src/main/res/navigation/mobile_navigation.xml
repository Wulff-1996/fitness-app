<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_track">

    <fragment
        android:id="@+id/navigation_track"
        android:name="com.example.fitness_app.fragments.Track.TrackFragment"
        tools:layout="@layout/fragment_track" />

    <fragment
        android:id="@+id/navigation_quests"
        android:name="com.example.fitness_app.fragments.quests.QuestFragment"
        tools:layout="@layout/fragment_quest" />

    <fragment
        android:id="@+id/navigation_achievements"
        android:name="com.example.fitness_app.fragments.achievement.AchievementFragment"
        tools:layout="@layout/fragment_achievement" />

    <fragment
        android:id="@+id/navigation_profile"
        android:name="com.example.fitness_app.fragments.profile.ProfileFragment"
        tools:layout="@layout/fragment_profile"/>
</navigation>