<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryBackground</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/primaryBackground</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="android:textColorSecondary">@color/mutedText</item>
        <item name="cardViewStyle">@style/mCardView</item>
    </style>

    <!--card view-->
    <style name="mCardView" parent="Base.CardView">
        <item name="cardBackgroundColor">@color/secondaryBackground</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="icon_button_default_style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@drawable/icon_button_default_background</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="icon_button_delete_style" parent="TextAppearance.AppCompat">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@drawable/delete_button_background</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:padding">8dp</item>
    </style>

    <!--text styles -->
    <style name="header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/header_big</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="bodyText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/bodytext_normal</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="bodyText.big">
        <item name="android:textSize">@dimen/bodytext_big</item>
    </style>

    <style name="bodyText.muted">
        <item name="android:textColor">@color/mutedText</item>
    </style>

    <style name="bodyText.thin">
        <item name="android:fontFamily">@font/roboto_thin</item>
    </style>

    <style name="bodyText.thin.muted">
        <item name="android:textColor">@color/mutedText</item>
    </style>

    <style name="bodyText.light">
        <item name="android:fontFamily">@font/roboto_light</item>
    </style>

    <style name="bodyText.light.muted">
        <item name="android:textColor">@color/mutedText</item>
    </style>

    <!-- chips style-->
    <style name="chipTextAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="editText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/text</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:paddingStart">6dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColorHint">@color/mutedText</item>
        <item name="android:fontFamily">@font/roboto_regular</item>

    </style>

    <style name="icon_style" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/icon_color</item>
        <item name="android:textSize">20dp</item>
    </style>

    <!-- remove all caps on tab layout -->
    <style name="tabLayout" parent="Widget.Design.TabLayout">
        <item name="android:textAllCaps">false</item>
    </style>


</resources>