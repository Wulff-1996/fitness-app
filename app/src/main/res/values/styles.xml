<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryBackground</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/secondaryBackground</item>
        <item name="android:textColorPrimary">@color/text</item>
        <item name="cardViewStyle">@style/mCardView</item>
        <item name="android:textColorSecondary">@color/mutedText</item>
    </style>

    <style name="header" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/header_big</item>
        <item name="android:textAllCaps">false</item>
    </style>



    <style name="mCardView" parent="Base.CardView">
        <item name="cardBackgroundColor">@color/primaryBackground</item>
        <item name="cardCornerRadius">@dimen/card_corner_radius</item>
        <item name="cardElevation">2dp</item>
    </style>

</resources>
